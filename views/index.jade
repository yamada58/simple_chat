extends layout

block content

  <div id="content">
  </div>
  <!-- TODO一覧表示のテンプレート -->
  <script type="text/template" id="list-template">
  <h1>Chat</h1>
  <div id="displayName">こんにちは#{user.displayName}さん</div>
  <textarea style="width:300px;height:50px"id="new-chat" placeholder="Todo?" autofocus></textarea>
  <input type="button" class="btn btn-success" id="addChat" value="追加">
  <hr>
  <div class="container">
  <table class="table table-hover">
  <tbody id="chat-lists"></tbody>
  </table>
  </div>
  </script>

  <!-- TODO一行分のテンプレート（上のtbody部分に挿入される） -->
  <script type="text/template" id="item-template">
  <td><input type="checkbox" class="toggle" <%- status == '1' ? 'checked' : '' %>></td>
  <td style="margin:0px">
  <span class="chat-edit" style="margin:0px"><%- comment %></span>
  </td>
  <td style="margin:0px">
  <span class="chat-edit" style="margin:0px"><%- name != '' && name != null ? name + 'さんは言いました' : '' %></span>
  </td>
  </script>



  <script src="javascripts/lib/jquery-2.1.3.min.js" type="text/javascript"></script>
  <script src="javascripts/lib/underscore-min.js" type="text/javascript"></script>
  <script src="javascripts/lib/backbone-min.js" type="text/javascript"></script>
  <script src="/socket.io/socket.io.js"></script>

  <!--   model   -->
  <script src="javascripts/models/chat-model.js" type="text/javascript"></script>
  <!--   collection   -->
  <script src="javascripts/collections/chat-collection.js" type="text/javascript"></script>
  <!--   view   -->
  <script src="javascripts/views/chat-item-view.js" type="text/javascript"></script>
  <script src="javascripts/views/chat-collection-view.js" type="text/javascript"></script>
  <!--   router   -->
  <script src="javascripts/routers/router.js" type="text/javascript"></script>

  <script src="javascripts/app.js" type="text/javascript"></script>
  <script src="javascripts/facebook.js" type="text/javascript"></script>

  <!-- 吹き出し -->
  <div class="popover right show" style="position:relative; max-width:100%;">
  <div class="arrow"></div>
  <h3 class="popover-title">タイトル</h3>
  <div class="popover-content">
  <p>内容</p>
  </div>
  </div>
